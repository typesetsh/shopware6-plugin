{% sw_extends '@Framework/documents/typesetsh/style_base_portrait.css.twig' %}

{% block document_style %}
    {% sw_include '@TypesetshShopwarePlatform/documents/typesetsh/style_a4.css.twig' %}

    @page {
        @bottom-right {
            content: '{{ 'document.pageText'|trans({'%page%': "' counter(page) '", '%pages%': "' counter(pages) '"})|raw }}';
            vertical-align: top;
            padding-top: 12mm;
        }

        @area header {
            content: element(header);
            top: 10mm;
            right: 10mm;
            left: 20mm;
        }

        @area footer {
            content: element(footer);
            padding: 5mm 0 5mm 20mm;
            bottom: 0mm;
            height: 40mm;
            right: 0mm;
            left: 0mm;
            background: #f8f8f8;
            border-top: 1mm solid #9e0b0e;
            box-sizing:border-box;
        }
    }

    html {
        font-size: 9pt;
    }

    h1 {
        font-size: 14pt;
        clear: both;
        margin: 0;
    }

    .bold {
        font-weight: bold;
    }

    .document-comment-container {
        border-left: 1mm solid #f00;
        background: #F0F0F0;
        font-size: 0.9em;
        padding: 1mm 2mm;
        margin: 2mm 0;
    }


    .info {
        float: right;
    }

    h3 {
        text-align: right;
        margin: 1em 0 0.5em 0;
        clear: both;
    }

    table.information {
        border: none 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    table.information td, table.information th {
        border: none 0;
        padding: 0;
        line-height: 12pt;
    }

    table.information th {
        font-weight: bold;
        padding-right: 5mm;
        text-align: right;
    }

    table.information td {
        text-align: right;
    }

    header#logo {
        position: running(header);
        text-align: left;
    }

    header#logo img {
        max-height: 20mm;
    }

    header#letter {
        min-height: 60mm;
    }

    header#letter .left {
        /* Absolute position to fit the letter window */
        position: absolute;
        box-sizing: border-box;
        left: 0;
        top: 10mm;
        height: 40mm;
        width: 90mm;
        font-size: 10pt;
        padding: 0;
    }

    address.sender {
        font-size: 0.75em;
        color: #999;
        margin-bottom: 1em;
        font-style: normal;
    }

    address.recipient {
        font-style: normal;
        line-height: 12pt;
    }

    header#letter .right {
        position: absolute;
        right: 0;
        top: 16mm;
    }

    footer#footer {
        position: running(footer);
    }

    footer#footer .page-count {
        color: #666;
    }

    footer#footer .footer-details {
        display: flex;
        justify-content: space-between;
        font-size: 9pt;
        line-height: 12pt;
        color: #666;
        margin-top: 5mm;
    }

    footer#footer .footer-details ul {
        list-style: none;
        padding: 0;
        flex: 0 1 30%;
    }

    footer#footer .footer-details li.spacing {
        margin-top: 2mm;
    }

    .order-details {
        display: flow-root;
    }

    section.payment {
        float: left;
        width: 40%;
        margin-top: 5mm;
    }

    section.shipping {
        float: right;
        width: 40%;
        margin-top: 5mm;
    }


    .line-item-container {
        display: flow-root;
    }

    .sum-container {
        display: flow-root;
    }

    table.line-item-table {
        clear: both;
        width: 100%;
        border: none;
        font-size: 9pt;
        margin: 5mm 0;
    }

    table.line-item-table th {
        border: none 0;
        border-bottom: 0.5mm solid black;
        font-weight: bold;
        text-align: left;
        padding: 2mm;
    }

    table.line-item-table td {
        border: none 0;
        padding: 2mm;
    }

    table.line-item-table .qty {
        text-align: center;
    }

    table.line-item-table .price {
        text-align: right;
        white-space: nowrap;
    }

    table.sum-table {
        margin-top: 5mm;
        float: right;
        border: none;
        border-collapse: separate;
        padding: 0;
        border-spacing: 0;

    }

    table.sum-table td, table.sum-table th {
        border: none;
        border-width: 0;
        padding: 1mm 0;
        line-height: 100%;
    }

    table.sum-table th {
        font-weight: bold;
        padding: 1mm 5mm;
        text-align: left;
    }

    table.sum-table .grand td, table.sum-table .grand th {
        font-size: 1.15em;
        padding-top: 2mm;
        vertical-align: baseline;
    }

    table.sum-table .grand td {
        border-bottom: .5mm double #333;
    }

    table.sum-table td {
        text-align: right;
    }
{% endblock %}
